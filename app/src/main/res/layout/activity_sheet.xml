<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.nostate.drugstore.tresenzettel.SheetActivity"
    android:id="@+id/sheetLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vor der Veranstaltung"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="30dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/count_opening_balance"
            android:id="@+id/OpeningBalanceButton"
            android:enabled="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/count_opening_stock"
            android:id="@+id/OpeningStockButton"
            android:enabled="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nach der Veranstaltung"
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            android:paddingTop="40dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/count_final_balance"
            android:id="@+id/FinalBalanceButton"
            android:enabled="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/count_final_stock"
            android:id="@+id/FinalStockButton"
            android:enabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Berechnung"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="30dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Jetzt Berechnen"
            android:id="@+id/CalculationButton"
            android:enabled="false" />

    </LinearLayout>
</RelativeLayout>
